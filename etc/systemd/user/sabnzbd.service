[Unit]
Description = SABnzbd binary newsreader

[Service]
EnvironmentFile = /etc/default/sabnzbd
ExecStart = /bin/sh -c "python2 ${SABNZBD_DIR}/SABnzbd.py ${SABNZBD_ARGS} --pid /tmp"
ExecStop = /usr/bin/curl -f "${SABNZBD_PROTOCOL}://${SABNZBD_IP}:${SABNZBD_PORT}/sabnzbd/api?mode=shutdown&ma_username=$SABNZBD_USERNAME&ma_password=$SABNZBD_PASSWORD&apikey=${SABNZBD_KEY}"
Type = forking
PIDFile = /tmp/sabnzbd-9090.pid

[Install]
WantedBy = default.target
